from typing import List

class Solution:
    def rob(self, nums: List[int]) -> int:
        if len(nums) < 2:
            return nums[0]

        def robber(arr):   
            prev2 = 0
            prev1 = 0
            for i in arr:
                curr = max(prev1, prev2 + i)
                prev2 = prev1
                prev1 = curr
            return prev1

        return max(
            robber(nums[:-1]),  
            robber(nums[1:])    
        )
